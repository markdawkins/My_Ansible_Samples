---
- name: Remove Radius Server 
  hosts: routers,switches
  gather_facts: true
  connection: local
  tasks:
    - name:remove server key and radius server
      ios_config:
          lines:
           - no client x.x.x.x server-key 
           - no radius-server SERVER_NAME_GOES_HERE
           
           
    

    - name: save running to startup when modified
      ios_config:
        save_when: modified
